<div class="card w-50">
  <div class="card-header">
    <h4>Editing friend</h4>
  </div>
  <div class="card-body">
    <%= render "form", friend: @friend %>
    <div>
      <%= link_to 'Show', @friend, class:"btn btn-secondary mt-3" %>
      <%= link_to 'Back', friends_path, class:"btn btn-dark mt-3" %>
      <%= button_to 'Delete', @friend, method: :delete, form: { data: { turbo_confirm: "Are you sure?" } }, class: "btn btn-danger mt-3" %>
    </div>
  </div>
</div>



